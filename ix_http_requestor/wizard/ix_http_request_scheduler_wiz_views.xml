<odoo>
    <record id="ix_http_request_scheduler_wiz_form_view" model="ir.ui.view">
        <field name="name">ix_http_request_scheduler_wiz_form_view</field>
        <field name="model">ix.http.request.scheduler.wiz</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Schedule Request">
                <group>
                    <group>
                        <field name="interval_number" required="1"/>
                        <field name="interval_type" required="1"/>
                    </group>
                    <group>
                        <field name="nextcall" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Schedule" name="activate_wizard" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
