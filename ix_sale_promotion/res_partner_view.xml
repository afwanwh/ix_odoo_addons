<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="promotion_view_inside_partner_ix" model="ir.ui.view">
            <field name="name">promotion_view_inside_partner_ix</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="comment" position="before">
                    <group>
                        <group>
                            <field name="promotion_id" domain="[('state', '=', 'on'), ('type', 'in', ['points'])]"/>
                        </group>
                        <group attrs="{'invisible': [('promotion_id', '=', False)]}">
                            <field name="available_pts"/>
                            <field name="redeemed_pts"/>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</openerp>